{
  "name": "my-electron-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "cd frontend && vite",
    "start": "electron .",
    "build-frontend": "cd frontend && vite build",
    "electron-build": "electron-builder"
  },
  "build": {
    "appId": "com.myapp.id",
    "productName": "MyElectronApp",
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "backend/**",
      "frontend/dist/**",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32", "arm64"]
        }
      ],
      "icon": "assets/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
